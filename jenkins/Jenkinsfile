pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    stages {
        stage('build') {
            steps {
                echo "This is build stage"
                sh 'mvn clean package'
            }
            post {
                success {
                    archiveArtifact artifacts: '**/target/*.war'
                }
            }

        }
        stage('test') {
            steps {
                echo "This is test stage"
            }

        }
        stage('deploy') {
            steps {
                echo "This is deploy stage"
            }

        }
    }

}